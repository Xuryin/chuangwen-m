.quota-item
  display flex
  justify-content center
  align-items center
  height 140px
  padding 20px 0
  width 50%

  .item-img
    width 60px

    img
      width 60px

  .item-number
    width 650px
    display flex
    flex-direction column
    margin-left 10px

    span
      font-family PingFangSC-Medium


    >span:nth-child(1)
      font-size 26px
      line-height 50px
      color #0F0F0F


    >span:nth-child(2)
      font-size 40px
      color #2d7ecd

    .item-per
      font-size 24px
