.list-item-container {
  height: 192px;
  border-bottom: 1px solid #EDEEF1;
  margin: 0 40px;

  .list-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 50px;
    line-height: 50px;
    padding-top: 40px;

    .item-header-title {
      flex: 1;
      font-family: PingFangSC-Medium;
      font-size: 32px;
      color: #0F0F0F;
    }

    .item-header-info {

      .item-header-info-num {
        font-family: Helvetica;
        font-size: 42px;
        color: #2D7ECD;
      }

      .item-header-info-unit {
        font-family: PingFangSC-Regular;
        font-size: 20px;
        color: #2D7ECD;
      }
    }
  }

  .list-item-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 40px;
    line-height: 40px;
    margin-top: 23px;
    font-family: PingFangSC-Regular;
    font-size: 28px;
    color: #979797;

    .item-content-label {
    }

    .item-content-span {
      
    }
  }
}