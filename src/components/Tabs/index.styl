.tabs-wrap
  width: 100%
  height 100%
  overflow: hidden;
  .flex
    display: flex;
  .tabs
    width: 100%
    height 84px
    border-radius: 20px 20px 0 0 
    background-color: #fff
    overflow-x: auto
    align-items: center
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    box-shadow: 0 1px 4px 0 rgba(67,120,191,0.16); 
    &::-webkit-scrollbar {
      display: none
    }

    span
      color:#626262
      font-size: 32px;
      flex-shrink: 0;
      width: fit-content;
      margin 0 0 0 40px
      &.cur
        position: relative
        color: #2D7ECD;
        &:before
          content:''
          position: absolute
          bottom: -18px
          left: 50%
          width 40px
          height 4px
          background-color #2D7ECD
          border-radius: 2px;
          margin-left: -20px
  .tabs-content
    width: 100%
    margin-top: 84px
    height calc(100% - 84px)
    transition: 0.2s ease
    background: #fff
    .tabs-content-box
      flex-shrink: 0
      width: 100%
      height 100%
      overflow-y: auto
      




   